@using Domain.Entities
@model Reservation
@{
    ViewData["Title"] = "Reserve Table";
}
<h2>Reserve a Table</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CustomerName"></label>
        <input asp-for="CustomerName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ReservationTime"></label>
        <input asp-for="ReservationTime" type="datetime-local" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="TableId">Select Table</label>
        <select asp-for="TableId" class="form-control" asp-items="ViewBag.Tables"></select>
    </div>

    <div class="form-group">
        <label asp-for="Notes"></label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Reserve</button>
</form>
