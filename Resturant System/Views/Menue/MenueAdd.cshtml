@using Resturant_System.ViewModel
@model MenueCatViewModel

@{
    ViewData["Title"] = "MenueAdd";
}
@section Styles {
    <link rel="stylesheet" href="~/css/menueadd-form.css" />
}



<h1>Menue Add</h1>
<h4>Menue</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6 form-container">
        <form asp-action="Add" asp-controller="Menue" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Menue.Name" class="control-label"></label>
                <input asp-for="Menue.Name" class="form-control" />
                <span asp-validation-for="Menue.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Menue.Price" class="control-label"></label>
                <input asp-for="Menue.Price" class="form-control" />
                <span asp-validation-for="Menue.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Menue.Description" class="control-label"></label>
                <input asp-for="Menue.Description" class="form-control" />
                <span asp-validation-for="Menue.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Menue.Category" class="control-label"></label>
                <select asp-for="Menue.cateogryId" class="form-control"
                        asp-items="@(new SelectList(Model.categories, "Id", "Name"))">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="Menue.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Menue.PreparationTimeInMinutes" class="control-label"></label>
                <input asp-for="Menue.PreparationTimeInMinutes" class="form-control" />
                <span asp-validation-for="Menue.PreparationTimeInMinutes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Menue.quantity" class="control-label"></label>
                <input asp-for="Menue.quantity" class="form-control" />
                <span asp-validation-for="Menue.quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Menue.Image" class="control-label"></label>
                <input asp-for="ImageFile" type="file" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}
